
<%= form_with model: cat do |form| %>
    <% if form.object.errors.any? %>
        <p class="error"><%= form.object.errors.full_messages.first %>
</p>
    <% end %>
    
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :photo %>
        <%= form.file_field :photo %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>